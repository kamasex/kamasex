  function updateProfileCompletion(profile, user) {
    const completionTasks = [
      { name: 'Nombre completo', completed: !!(profile.firstName && profile.lastName) },
      { name: 'Teléfono', completed: !!profile.phone },
      { name: 'Email verificado', completed: profile.emailVerified },
      { name: 'Dirección de envío', completed: user.addresses.some(addr => addr.type === 'shipping') },
      { name: 'Fecha de nacimiento', completed: !!profile.dateOfBirth }
    ];
    
    const completedCount = completionTasks.filter(task => task.completed).length;
    const percentage = Math.round((completedCount / completionTasks.length) * 100);
    
    document.getElementById('completion-percentage').textContent = `${percentage}%`;
    document.getElementById('completion-bar').style.width = `${percentage}%`;
    
    const tasksContainer = document.getElementById('completion-tasks');
    tasksContainer.innerHTML = completionTasks.map(task => `
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-3 ${task.completed ? 'text-green-500' : 'text-gray-300'}" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span class="text-sm ${task.completed ? 'text-gray-900' : 'text-gray-500'}">${task.name}</span>
      </div>
    `).join('');
  }

