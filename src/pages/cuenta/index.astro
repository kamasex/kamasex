  function initializeProfile() {
    const editBtn = document.getElementById('edit-profile-btn');
    const form = document.getElementById('profile-form');
    const formActions = document.getElementById('profile-form-actions');
    const saveBtn = document.getElementById('save-profile-btn');
    const cancelBtn = document.getElementById('cancel-profile-btn');
    const inputs = form.querySelectorAll('input, select');

    // Load current profile data
    loadProfileForm();

    editBtn.addEventListener('click', function() {
      // Enable form editing
      inputs.forEach(input => {
        if (input.name !== 'email') { // Email no se puede editar
          input.disabled = false;
          input.classList.remove('disabled:bg-gray-50', 'disabled:text-gray-500');
        }
      });
      formActions.classList.remove('hidden');
      editBtn.textContent = 'Editando...';
      editBtn.disabled = true;
    });

    cancelBtn.addEventListener('click', function() {
      // Disable form editing and reload data
      inputs.forEach(input => {
        input.disabled = true;
        input.classList.add('disabled:bg-gray-50', 'disabled:text-gray-500');
      });
      formActions.classList.add('hidden');
      editBtn.textContent = 'Editar';
      editBtn.disabled = false;
      loadProfileForm(); // Reload original data
    });

    form.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      saveBtn.disabled = true;
      saveBtn.innerHTML = '<span class="animate-spin inline-block w-4 h-4 border-2 border-current border-t-transparent rounded-full mr-2"></span>Guardando...';
      
      try {
        const formData = new FormData(form);
        const updateData = {
          firstName: formData.get('firstName'),
          lastName: formData.get('lastName'),
          phone: formData.get('phone'),
          dateOfBirth: formData.get('dateOfBirth'),
          gender: formData.get('gender'),
          marketingConsent: formData.has('marketingConsent')
        };

        const success = await updateUserProfile(updateData);
        
        if (success) {
          await reloadUserProfile();
          
          // Disable editing
          inputs.forEach(input => {
            input.disabled = true;
            input.classList.add('disabled:bg-gray-50', 'disabled:text-gray-500');
          });
          formActions.classList.add('hidden');
          editBtn.textContent = 'Editar';
          editBtn.disabled = false;
          
          showToast('Perfil actualizado exitosamente', 'success');
        } else {
          showToast('Error al actualizar perfil', 'error');
        }
      } catch (error) {
        console.error('Error updating profile:', error);
        showToast('Error al actualizar perfil', 'error');
      } finally {
        saveBtn.disabled = false;
        saveBtn.textContent = 'Guardar cambios';
      }
    });

    // Enable save button when form changes
    inputs.forEach(input => {
      input.addEventListener('input', function() {
        saveBtn.disabled = false;
      });
    });
  }

  function loadProfileForm() {
    const user = userStore.get();
    const profile = user.profile;
    
    if (profile) {
      document.getElementById('profile-firstName').value = profile.firstName || '';
      document.getElementById('profile-lastName').value = profile.lastName || '';
      document.getElementById('profile-email').value = profile.email || '';
      document.getElementById('profile-phone').value = profile.phone || '';
