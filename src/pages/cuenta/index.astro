---
// src/pages/cuenta/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro';

// Esta página requiere autenticación - se manejará en el cliente
---

<BaseLayout 
  title="Mi Cuenta - Panel de Usuario"
  description="Gestiona tu perfil, órdenes, direcciones y preferencias"
  noindex={true}
>
  <!-- Loading State -->
  <div id="loading-state" class="min-h-screen flex items-center justify-center">
    <div class="text-center">
      <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-500 mx-auto mb-4"></div>
      <p class="text-gray-600">Cargando tu cuenta...</p>
    </div>
  </div>

  <!-- Not Authenticated State -->
  <div id="not-authenticated" class="hidden min-h-screen flex items-center justify-center bg-gray-50">
    <div class="max-w-md w-full bg-white rounded-lg shadow-md p-8 text-center">
      <div class="text-gray-400 mb-6">
        <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Acceso requerido</h2>
      <p class="text-gray-600 mb-8">Debes iniciar sesión para acceder a tu cuenta</p>
      <div class="space-y-3">
        <button id="login-redirect" class="w-full btn-primary">
          Iniciar sesión
        </button>
        <button id="register-redirect" class="w-full btn-outline">
          Crear cuenta
        </button>
      </div>
    </div>
  </div>

  <!-- Main Account Dashboard -->
  <div id="account-dashboard" class="hidden">
    <!-- Header -->
    <div class="bg-white border-b">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center">
          <div>
            <h1 class="text-3xl font-bold text-gray-900">Mi Cuenta</h1>
            <p class="text-gray-600 mt-2">Gestiona tu información personal y preferencias</p>
          </div>
          <div class="mt-4 sm:mt-0 flex items-center space-x-4">
            <div class="text-right">
              <p class="text-sm text-gray-600">Miembro desde</p>
              <p class="font-medium text-gray-900" id="member-since">---</p>
            </div>
            <div class="h-12 w-12 bg-primary-100 rounded-full flex items-center justify-center">
              <span class="text-primary-600 font-bold text-lg" id="user-initials">--</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
      <div class="flex flex-col lg:flex-row gap-8">
        
        <!-- Sidebar Navigation -->
        <div class="lg:w-1/4">
          <nav class="bg-white rounded-lg shadow-sm p-6 sticky top-24">
            <div class="space-y-2">
              <a href="#" data-tab="overview" class="tab-link flex items-center px-4 py-3 text-primary-600 bg-primary-50 rounded-md font-medium">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2V7z" />
                </svg>
                Resumen
              </a>
              <a href="#" data-tab="profile" class="tab-link flex items-center px-4 py-3 text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-md transition-colors">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                Perfil
              </a>
              <a href="#" data-tab="orders" class="tab-link flex items-center px-4 py-3 text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-md transition-colors">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                </svg>
                Mis Pedidos
                <span class="ml-auto bg-gray-200 text-gray-700 text-xs px-2 py-1 rounded-full" id="orders-count">0</span>
              </a>
              <a href="#" data-tab="addresses" class="tab-link flex items-center px-4 py-3 text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-md transition-colors">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Direcciones
              </a>
              <a href="#" data-tab="wishlist" class="tab-link flex items-center px-4 py-3 text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-md transition-colors">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
                Favoritos
                <span class="ml-auto bg-gray-200 text-gray-700 text-xs px-2 py-1 rounded-full" id="wishlist-count">0</span>
              </a>
              <a href="#" data-tab="preferences" class="tab-link flex items-center px-4 py-3 text-gray-700 hover:text-primary-600 hover:bg-gray-50 rounded-md transition-colors">
                <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                Preferencias
              </a>
            </div>
            
            <!-- Logout Button -->
            <div class="mt-8 pt-6 border-t border-gray-200">
              <button id="logout-btn" class="w-full flex items-center justify-center px-4 py-3 text-red-600 hover:text-red-700 hover:bg-red-50 rounded-md transition-colors">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                Cerrar sesión
              </button>
            </div>
          </nav>
        </div>

        <!-- Main Content -->
        <div class="lg:w-3/4">
          
          <!-- Overview Tab -->
          <div id="overview-tab" class="tab-content">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8">
              <!-- Stats Cards -->
              <div class="bg-white rounded-lg shadow-sm p-6">
                <div class="flex items-center">
                  <div class="p-3 bg-blue-100 rounded-lg">
                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <p class="text-sm text-gray-600">Total de pedidos</p>
                    <p class="text-2xl font-bold text-gray-900" id="total-orders">0</p>
                  </div>
                </div>
              </div>
              
              <div class="bg-white rounded-lg shadow-sm p-6">
                <div class="flex items-center">
                  <div class="p-3 bg-green-100 rounded-lg">
                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <p class="text-sm text-gray-600">Total gastado</p>
                    <p class="text-2xl font-bold text-gray-900" id="total-spent">$0</p>
                  </div>
                </div>
              </div>
              
              <div class="bg-white rounded-lg shadow-sm p-6">
                <div class="flex items-center">
                  <div class="p-3 bg-yellow-100 rounded-lg">
                    <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <p class="text-sm text-gray-600">Puntos de lealtad</p>
                    <p class="text-2xl font-bold text-gray-900" id="loyalty-points">0</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Recent Orders -->
            <div class="bg-white rounded-lg shadow-sm p-6 mb-8">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-semibold text-gray-900">Pedidos recientes</h2>
                <a href="#" data-tab="orders" class="text-primary-600 hover:text-primary-500 text-sm font-medium">
                  Ver todos
                </a>
              </div>
              <div id="recent-orders">
                <!-- Se llena dinámicamente -->
              </div>
            </div>

            <!-- Profile Completion -->
            <div id="profile-completion" class="bg-white rounded-lg shadow-sm p-6">
              <div class="flex items-center justify-between mb-4">
                <h2 class="text-xl font-semibold text-gray-900">Completa tu perfil</h2>
                <span class="text-sm text-gray-600" id="completion-percentage">0%</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-2 mb-4">
                <div id="completion-bar" class="bg-primary-500 h-2 rounded-full transition-all duration-300" style="width: 0%"></div>
              </div>
              <div id="completion-tasks" class="space-y-2">
                <!-- Se llena dinámicamente -->
              </div>
            </div>
          </div>

          <!-- Profile Tab -->
          <div id="profile-tab" class="tab-content hidden">
            <div class="bg-white rounded-lg shadow-sm p-6">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-semibold text-gray-900">Información personal</h2>
                <button id="edit-profile-btn" class="text-primary-600 hover:text-primary-500 text-sm font-medium">
                  Editar
                </button>
              </div>
              
              <form id="profile-form" class="space-y-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label for="profile-firstName" class="block text-sm font-medium text-gray-700 mb-2">
                      Nombre
                    </label>
                    <input
                      type="text"
                      id="profile-firstName"
                      name="firstName"
                      disabled
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 disabled:bg-gray-50 disabled:text-gray-500"
                    />
                  </div>
                  <div>
                    <label for="profile-lastName" class="block text-sm font-medium text-gray-700 mb-2">
                      Apellido
                    </label>
                    <input
                      type="text"
                      id="profile-lastName"
                      name="lastName"
                      disabled
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 disabled:bg-gray-50 disabled:text-gray-500"
                    />
                  </div>
                </div>
                
                <div>
                  <label for="profile-email" class="block text-sm font-medium text-gray-700 mb-2">
                    Email
                  </label>
                  <input
                    type="email"
                    id="profile-email"
                    name="email"
                    disabled
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 disabled:bg-gray-50 disabled:text-gray-500"
                  />
                </div>
                
                <div>
                  <label for="profile-phone" class="block text-sm font-medium text-gray-700 mb-2">
                    Teléfono
                  </label>
                  <input
                    type="tel"
                    id="profile-phone"
                    name="phone"
                    disabled
                    class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 disabled:bg-gray-50 disabled:text-gray-500"
                  />
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label for="profile-dateOfBirth" class="block text-sm font-medium text-gray-700 mb-2">
                      Fecha de nacimiento
                    </label>
                    <input
                      type="date"
                      id="profile-dateOfBirth"
                      name="dateOfBirth"
                      disabled
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 disabled:bg-gray-50 disabled:text-gray-500"
                    />
                  </div>
                  <div>
                    <label for="profile-gender" class="block text-sm font-medium text-gray-700 mb-2">
                      Género
                    </label>
                    <select
                      id="profile-gender"
                      name="gender"
                      disabled
                      class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500 disabled:bg-gray-50 disabled:text-gray-500"
                    >
                      <option value="">Seleccionar</option>
                      <option value="male">Masculino</option>
                      <option value="female">Femenino</option>
                      <option value="other">Otro</option>
                    </select>
                  </div>
                </div>
                
                <div class="flex items-center">
                  <input
                    type="checkbox"
                    id="profile-marketingConsent"
                    name="marketingConsent"
                    disabled
                    class="h-4 w-4 text-primary-600 rounded disabled:opacity-50"
                  />
                  <label for="profile-marketingConsent" class="ml-2 text-sm text-gray-600">
                    Acepto recibir ofertas y promociones por email
                  </label>
                </div>
                
                <div id="profile-form-actions" class="hidden pt-6 border-t border-gray-200">
                  <div class="flex space-x-4">
                    <button type="submit" id="save-profile-btn" class="btn-primary disabled:opacity-50" disabled>
                      Guardar cambios
                    </button>
                    <button type="button" id="cancel-profile-btn" class="btn-outline">
                      Cancelar
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>

          <!-- Orders Tab -->
          <div id="orders-tab" class="tab-content hidden">
            <div class="bg-white rounded-lg shadow-sm p-6">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-semibold text-gray-900">Mis pedidos</h2>
                <div class="flex items-center space-x-4">
                  <select id="orders-filter" class="border border-gray-300 rounded-md px-3 py-2 text-sm">
                    <option value="all">Todos los pedidos</option>
                    <option value="pending">Pendientes</option>
                    <option value="confirmed">Confirmados</option>
                    <option value="shipped">Enviados</option>
                    <option value="delivered">Entregados</option>
                  </select>
                </div>
              </div>
              <div id="orders-list">
                <!-- Se llena dinámicamente -->
              </div>
            </div>
          </div>

          <!-- Addresses Tab -->
          <div id="addresses-tab" class="tab-content hidden">
            <div class="bg-white rounded-lg shadow-sm p-6">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-semibold text-gray-900">Mis direcciones</h2>
                <button id="add-address-btn" class="btn-primary">
                  Agregar dirección
                </button>
              </div>
              <div id="addresses-list">
                <!-- Se llena dinámicamente -->
              </div>
            </div>
          </div>

          <!-- Wishlist Tab -->
          <div id="wishlist-tab" class="tab-content hidden">
            <div class="bg-white rounded-lg shadow-sm p-6">
              <div class="flex items-center justify-between mb-6">
                <h2 class="text-xl font-semibold text-gray-900">Mis favoritos</h2>
                <p class="text-sm text-gray-600" id="wishlist-total">0 productos</p>
              </div>
              <div id="wishlist-grid" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                <!-- Se llena dinámicamente -->
              </div>
            </div>
          </div>

          <!-- Preferences Tab -->
          <div id="preferences-tab" class="tab-content hidden">
            <div class="space-y-8">
              <!-- Notifications -->
              <div class="bg-white rounded-lg shadow-sm p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-6">Notificaciones</h2>
                <div class="space-y-4">
                  <div class="flex items-center justify-between">
                    <div>
                      <h3 class="font-medium text-gray-900">Actualizaciones de pedidos</h3>
                      <p class="text-sm text-gray-600">Recibe notificaciones sobre el estado de tus pedidos</p>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                      <input type="checkbox" id="order-updates" class="sr-only peer" checked>
                      <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                    </label>
                  </div>
                  
                  <div class="flex items-center justify-between">
                    <div>
                      <h3 class="font-medium text-gray-900">Promociones y ofertas</h3>
                      <p class="text-sm text-gray-600">Recibe ofertas exclusivas y promociones especiales</p>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                      <input type="checkbox" id="promotions" class="sr-only peer">
                      <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                    </label>
                  </div>
                  
                  <div class="flex items-center justify-between">
                    <div>
                      <h3 class="font-medium text-gray-900">SMS</h3>
                      <p class="text-sm text-gray-600">Recibe notificaciones por mensaje de texto</p>
                    </div>
                    <label class="relative inline-flex items-center cursor-pointer">
                      <input type="checkbox" id="sms-notifications" class="sr-only peer">
                      <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                    </label>
                  </div>
                </div>
              </div>

              <!-- Language & Currency -->
              <div class="bg-white rounded-lg shadow-sm p-6">
                <h2 class="text-xl font-semibold text-gray-900 mb-6">Idioma y moneda</h2>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label for="language-select" class="block text-sm font-medium text-gray-700 mb-2">
                      Idioma
                    </label>
                    <select id="language-select" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500">
                      <option value="es">Español</option>
                      <option value="en">English</option>
                    </select>
                  </div>
                  <div>
                    <label for="currency-select" class="block text-sm font-medium text-gray-700 mb-2">
                      Moneda
                    </label>
                    <select id="currency-select" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary-500">
                      <option value="COP">Peso Colombiano (COP)</option>
                      <option value="USD">Dólar Americano (USD)</option>
                    </select>
                  </div>
                </div>
              </div>

              <!-- Save Preferences -->
              <div class="flex justify-end">
                <button id="save-preferences-btn" class="btn-primary">
                  Guardar preferencias
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>

<script>
  // Importar stores y utilidades
  import { userStore, isUserReady, userFullName, requireAuth, logout, reloadUserProfile, reloadUserAddresses, reloadUserWishlist } from '../../stores/userStore.js';
  import { updateUserProfile, updateUserPreferences, addUserAddress } from '../../lib/firebase/users.js';

  document.addEventListener('DOMContentLoaded', function() {
    initializeAccountPage();
  });

  function initializeAccountPage() {
    const user = userStore.get();
    
    if (!user.isAuthenticated) {
      showNotAuthenticated();
      return;
    }

    if (user.isLoading) {
      showLoading();
      // Esperar a que cargue el usuario
      userStore.subscribe((state) => {
        if (!state.isLoading) {
          if (state.isAuthenticated) {
