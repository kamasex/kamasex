        });
        this.className = 'tab-link flex items-center px-4 py-3 text-primary-600 bg-primary-50 rounded-md font-medium';
        
        // Update tab content
        tabContents.forEach(content => {
          content.classList.add('hidden');
        });
        document.getElementById(`${targetTab}-tab`).classList.remove('hidden');
        
        // Load tab-specific data
        switch (targetTab) {
          case 'overview':
            loadOverviewData();
            break;
          case 'orders':
            loadOrdersData();
            break;
          case 'addresses':
            loadAddressesData();
            break;
          case 'wishlist':
            loadWishlistData();
            break;
