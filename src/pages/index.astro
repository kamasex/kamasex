    <script>
      // Scroll Trigger Logic
      function initScrollTrigger() {
        const logoScaleStart = parseFloat(getComputedStyle(document.documentElement).getPropertyValue('--logo-scale-min'));
        const logoScaleEnd = parseFloat(getComputedStyle(document.documentElement).getPropertyValue('--logo-scale-max'));
        
        function updateScrollEffects() {
          const scrollProgress = Math.min(window.scrollY / (window.innerHeight * 1.5), 1);
          const isMobile = window.innerWidth <= 768;
          
          // 1. Actualizar escala del logo (de pequeño a grande)
          const currentScale = logoScaleStart + (logoScaleEnd - logoScaleStart) * scrollProgress;
          document.documentElement.style.setProperty('--logo-scale', currentScale.toString());
          
          // 2. Parallax de la imagen de fondo (solo en desktop)
          if (!isMobile) {
            const bgPosition = 100 - (scrollProgress * 100); // Se mueve de 100% (abajo) a 0% (normal/center)
            document.documentElement.style.setProperty('--bg-position', bgPosition.toString() + '%');
          }
          
          // 3. Fade in del fondo blanco
          const bgOpacity = Math.min(scrollProgress * 1.5, 0.95); // Máximo 95% opacity
          document.documentElement.style.setProperty('--bg-opacity', bgOpacity.toString());
          
          // 4. Ocultar indicador de scroll
          const scrollIndicator = document.querySelector('.scroll-indicator') as HTMLElement;
          if (scrollIndicator) {
            scrollIndicator.style.opacity = (Math.max(1 - scrollProgress * 2, 0)).toString();
          }
        }

        // Throttle scroll events para mejor performance
        let ticking = false;
        function requestTick() {
          if (!ticking) {
            requestAnimationFrame(updateScrollEffects);
            ticking = true;
          }
        }

        function handleScroll() {
          ticking = false;
          requestTick();
        }

        // Event listeners optimizados
        const isMobile = window.innerWidth <= 768;
        const scrollOptions = { 
          passive: true, 
          capture: false 
        };
        
        window.addEventListener('scroll', handleScroll, scrollOptions);
        window.addEventListener('resize', () => {
          // Reinicializar en resize para detectar cambios mobile/desktop
          setTimeout(updateScrollEffects, 100);
        });
        
        // Initial call
        updateScrollEffects();
      }

      // Initialize when DOM is ready
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initScrollTrigger);
      } else {
        initScrollTrigger();
      }
    </script>

