    <style>
      :root {
        --logo-scale: 3; /* Empieza pequeño */
        --logo-scale-min: 3; /* Escala inicial (pequeña) */
        --logo-scale-max: 7; /* Escala final (grande) */
        --scroll-progress: 0; /* Variable CSS para el progreso del scroll */
        --bg-opacity: 0; /* Opacidad del fondo blanco */
        --bg-position: 100%; /* Posición Y: 100% = abajo, 0% = normal/center */
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Inter Tight", sans-serif;
        font-weight: 200;
        overflow-x: hidden;
      }

      /* Contenedor principal con altura extendida para scroll */
      .scroll-container {
        height: 300vh; /* Altura triple para permitir scroll */
        position: relative;
      }

      /* Sección fija que se queda en viewport */
      .fixed-section {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        z-index: 5;
      }

      /* Fondo blanco que aparece con scroll */
      .white-background {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgb(187, 187, 187);
        opacity: var(--bg-opacity);
        transition: opacity 0.1s ease-out;
        z-index: 1;
      }

      /* Contenedor de imagen con parallax */
      .background-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 120%; /* Más alto para el efecto parallax */
        background-image: url("/images/tacones2.webp");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        transform: translateY(var(--bg-position));
        transition: transform 0.1s ease-out;
        will-change: transform; /* Optimización GPU */
        z-index: 2;
      }

      /* Desactivar parallax en móviles para evitar temblores */
      @media (max-width: 768px) {
        .background-container {
          position: fixed;
          height: 100vh;
          transform: none !important;
          background-attachment: scroll;
          transition: none;
          will-change: auto;
        }
        
        /* Prevenir scroll bounce en iOS */
        body {
          -webkit-overflow-scrolling: touch;
          overscroll-behavior: none;
        }
      }

      /* Específico para Safari iOS */
      @supports (-webkit-touch-callout: none) {
        @media (max-width: 768px) {
          .background-container {
            position: fixed !important;
            background-attachment: scroll !important;
          }
        }
      }

      

      .content-wrapper {
        position: relative;
        z-index: 10;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        gap: 2rem;
        padding: 2rem;
      }

      /* Logo con animación de escala basada en scroll */
      .logo-container {
        width: calc(250px * var(--logo-scale));
        height: calc(100px * var(--logo-scale));
        max-width: 95vw;
        max-height: 60vh;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        transform-origin: center;
      }

      .logo-container img {
        width: 100%;
        height: 100%;
        object-fit: contain;
        filter: drop-shadow(0 10px 20px rgba(0, 0, 0, 0.3));
      }

      /* Social icons con mejores efectos */
      .social-links {
        display: flex;
        gap: 1rem;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
      }

      .social-link {
        width: 3rem;
        height: 3rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #ff0000;
        backdrop-filter: blur(10px);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        text-decoration: none;
      }

      .social-link:hover {
        background: #ff0000;
        color: white;
        transform: translateY(-0.25rem) scale(1.1);
        box-shadow: 0 10px 25px rgba(255, 0, 0, 0.4);
      }

      .social-link svg {
        width: 1.25rem;
        height: 1.25rem;
      }

      /* Responsive adjustments */
      @media (max-width: 768px) {
        :root {
          --logo-scale-max: 5; /* Más pequeño en móvil */
        }

        .logo-container {
          width: calc(175px * var(--logo-scale));
          height: calc(70px * var(--logo-scale));
        }

        .social-link {
          width: 2.5rem;
          height: 2.5rem;
        }

        .social-link svg {
          width: 1rem;
          height: 1rem;
        }
      }

      @media (max-width: 480px) {
        .logo-container {
          width: calc(140px * var(--logo-scale));
          height: calc(56px * var(--logo-scale));
        }

        .social-link {
          width: 2rem;
          height: 2rem;
        }

        .social-link svg {
          width: 0.875rem;
          height: 0.875rem;
        }
      }

      /* Animaciones de entrada */
      .fade-in {
        animation: fadeIn 1s ease-out both;
      }

      .fade-in-delay {
        animation: fadeIn 1s ease-out 0.3s both;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Scroll indicator (opcional) */
      .scroll-indicator {
        position: absolute;
        bottom: 2rem;
        left: 50%;
        transform: translateX(-50%);
        z-index: 15;
        color: rgb(55, 55, 55);
        font-size: 0.875rem;
        opacity: 0.7;
        animation: bounce 2s infinite;
      }

      @keyframes bounce {
        0%, 20%, 50%, 80%, 100% {
          transform: translateX(-50%) translateY(0);
        }
        40% {
          transform: translateX(-50%) translateY(-10px);
        }
        60% {
          transform: translateX(-50%) translateY(-5px);
        }
      }
    </style>
