<BaseLayout 
  title="Kamasex.shop - Tienda Premium para Adultos"
  description="Descubre nuestra colección premium de productos íntimos con envío discreto y calidad garantizada en Colombia"
>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-r from-gray-900 via-primary-900 to-gray-900 text-white overflow-hidden">
    <div class="absolute inset-0 bg-black opacity-50"></div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
      <div class="text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 animate-fade-in">
          Explora tu
          <span class="text-primary-400">Sensualidad</span>
        </h1>
        <p class="text-xl md:text-2xl mb-8 text-gray-300 max-w-3xl mx-auto">
          Productos premium para adultos con envío discreto y calidad garantizada en toda Colombia
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/productos" class="btn-primary text-lg px-8 py-4">
            Explorar Catálogo
          </a>
          <a href="#categorias" class="btn-outline text-lg px-8 py-4 border-white text-white hover:bg-white hover:text-gray-900">
            Ver Categorías
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Strip -->
  <section class="bg-white py-12 border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div class="flex flex-col items-center">
          <div class="bg-primary-100 p-4 rounded-full mb-4">
            <svg class="w-8 h-8 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Envío Discreto</h3>
          <p class="text-gray-600">Empaque neutro y entrega confidencial en toda Colombia</p>
        </div>
        
        <div class="flex flex-col items-center">
          <div class="bg-primary-100 p-4 rounded-full mb-4">
            <svg class="w-8 h-8 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Calidad Premium</h3>
          <p class="text-gray-600">Productos de las mejores marcas con garantía de satisfacción</p>
        </div>
        
        <div class="flex flex-col items-center">
          <div class="bg-primary-100 p-4 rounded-full mb-4">
            <svg class="w-8 h-8 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
          </div>
          <h3 class="text-lg font-semibold text-gray-900 mb-2">Compra Segura</h3>
          <p class="text-gray-600">Pagos encriptados y protección total de tus datos personales</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Categories Section -->
  <section id="categorias" class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Explora por Categorías</h2>
        <p class="text-lg text-gray-600">Encuentra exactamente lo que buscas en nuestras categorías especializadas</p>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {categories.map((category) => (
          <a 
            href={`/categoria/${category.slug}`}
            class="group relative bg-white rounded-2xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden"
          >
            <div class="aspect-square bg-gray-100 overflow-hidden">
              <img 
                src={category.image} 
                alt={category.name}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                onerror="this.src='/images/placeholder-category.jpg'"
              />
            </div>
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-6 text-white">
              <h3 class="text-xl font-bold mb-1">{category.name}</h3>
              <p class="text-sm text-gray-200">{category.count} productos</p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Products -->
  <section class="py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Productos Destacados</h2>
        <p class="text-lg text-gray-600">Los favoritos de nuestros clientes, seleccionados especialmente para ti</p>
      </div>
      
      <!-- Grid de productos funcional -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {featuredProducts.map((product) => (
          <div class="group relative bg-white rounded-xl shadow-sm hover:shadow-lg transition-all duration-300 overflow-hidden">
            <!-- Product Image -->
            <div class="aspect-square overflow-hidden bg-gray-100 relative">
              <img 
                src={product.image} 
                alt={product.name}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
                onerror="this.src='/images/placeholder-product.jpg'"
              />
              
              <!-- Badges -->
              <div class="absolute top-3 left-3 flex flex-col gap-2">
                {product.isNew && (
                  <span class="bg-primary-500 text-white text-xs font-bold px-2 py-1 rounded">
                    NUEVO
                  </span>
                )}
                {product.originalPrice && product.originalPrice > product.price && (
                  <span class="bg-green-500 text-white text-xs font-bold px-2 py-1 rounded">
                    -{Math.round(((product.originalPrice - product.price) / product.originalPrice) * 100)}%
                  </span>
                )}
                {!product.inStock && (
                  <span class="bg-gray-500 text-white text-xs font-bold px-2 py-1 rounded">
                    AGOTADO
                  </span>
                )}
              </div>

              <!-- Quick Actions -->
              <div class="absolute top-3 right-3 flex flex-col gap-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <button 
                  class="wishlist-btn bg-white text-gray-600 hover:text-red-500 p-2 rounded-full shadow-md transition-colors" 
                  aria-label="Agregar a favoritos"
                  data-product-id={product.id}
                >
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                  </svg>
                </button>
                <button 
                  class="bg-white text-gray-600 hover:text-primary-500 p-2 rounded-full shadow-md transition-colors" 
                  aria-label="Vista rápida"
                  onclick={`window.location.href='/productos/${product.id}'`}
                >
                  <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                </button>
              </div>

              <!-- Quick Add to Cart -->
              {product.inStock && (
                <div class="absolute bottom-0 left-0 right-0 bg-primary-500 text-white text-center py-2 translate-y-full group-hover:translate-y-0 transition-transform duration-300">
                  <button 
                    class="font-medium text-sm w-full h-full add-to-cart-btn"
                    data-product-id={product.id}
                    data-product-name={product.name}
                    data-product-price={product.price}
                    data-product-image={product.image}
                    data-product-category={product.category}
                  >
                    Agregar al Carrito
                  </button>
                </div>
              )}
            </div>

            <!-- Product Info -->
            <div class="p-4">
              <!-- Category -->
              <p class="text-xs text-gray-500 uppercase tracking-wide mb-1">{product.category}</p>
              
              <!-- Product Name -->
              <h3 class="font-medium text-gray-900 mb-2 line-clamp-2 group-hover:text-primary-500 transition-colors">
                <a href={`/productos/${product.id}`}>
                  {product.name}
                </a>
              </h3>

              <!-- Rating -->
              {product.rating && (
                <div class="flex items-center mb-2">
                  <div class="flex items-center">
                    {Array.from({ length: 5 }, (_, i) => (
                      <svg 
                        class={`h-4 w-4 ${i < Math.floor(product.rating!) ? 'text-yellow-400' : 'text-gray-300'}`}
                        fill="currentColor" 
                        viewBox="0 0 20 20"
                      >
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                    ))}
                  </div>
                  <span class="text-sm text-gray-500 ml-1">({product.rating})</span>
                </div>
              )}

              <!-- Price -->
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <span class="text-lg font-bold text-gray-900">
                    ${product.price.toLocaleString('es-CO')}
                  </span>
                  {product.originalPrice && (
                    <span class="text-sm text-gray-500 line-through">
                      ${product.originalPrice.toLocaleString('es-CO')}
                    </span>
                  )}
                </div>
                
                {product.inStock ? (
                  <span class="text-xs text-green-600 font-medium">En stock</span>
                ) : (
                  <span class="text-xs text-red-600 font-medium">Agotado</span>
                )}
              </div>

              <!-- Desktop Add to Cart Button -->
              <div class="mt-4 sm:hidden">
                {product.inStock ? (
                  <button 
                    class="w-full bg-primary-500 hover:bg-primary-600 text-white py-2 px-4 rounded-md font-medium transition-colors add-to-cart-btn"
                    data-product-id={product.id}
                    data-product-name={product.name}
                    data-product-price={product.price}
                    data-product-image={product.image}
                    data-product-category={product.category}
                  >
                    Agregar al Carrito
                  </button>
                ) : (
                  <button class="w-full bg-gray-300 text-gray-500 py-2 px-4 rounded-md font-medium cursor-not-allowed" disabled>
                    Agotado
                  </button>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/productos" class="btn-primary text-lg px-8 py-4">
          Ver Todo el Catálogo
        </a>
      </div>
    </div>
  </section>

  <!-- Newsletter Section -->
  <section class="bg-primary-500 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">
        Únete a la Comunidad Kamasex
      </h2>
      <p class="text-xl text-primary-100 mb-8">
        Recibe ofertas exclusivas, nuevos productos y contenido premium
      </p>
      
      <form class="max-w-md mx-auto flex gap-4" id="newsletter-form">
        <input
          type="email"
          placeholder="Tu email"
          class="flex-1 px-4 py-3 rounded-md text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-white"
          required
          id="newsletter-email"
        />
        <button
          type="submit"
          class="bg-white text-primary-500 px-6 py-3 rounded-md font-semibold hover:bg-gray-100 transition-colors"
        >
          Suscribirse
        </button>
      </form>
      
      <p class="text-sm text-primary-200 mt-4">
        🔒 Información 100% confidencial. Sin spam.
      </p>
    </div>
  </section>

  <!-- Trust Indicators -->
  <section class="bg-gray-900 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap justify-center items-center gap-8 opacity-60">
        <div class="text-white text-center">
          <div class="text-2xl font-bold">+10,000</div>
          <div class="text-sm">Clientes Satisfechos</div>
        </div>
        <div class="text-white text-center">
          <div class="text-2xl font-bold">4.8/5</div>
          <div class="text-sm">Calificación Promedio</div>
        </div>
        <div class="text-white text-center">
          <div class="text-2xl font-bold">500+</div>
          <div class="text-sm">Productos Premium</div>
        </div>
        <div class="text-white text-center">
          <div class="text-2xl font-bold">24/48h</div>
          <div class="text-sm">Entrega Rápida</div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Newsletter subscription
    const newsletterForm = document.getElementById('newsletter-form');
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        const emailInput = document.getElementById('newsletter-email') as HTMLInputElement;
        const email = emailInput.value;
        
        if (email) {
          // Simulate subscription
          const button = this.querySelector('button[type="submit"]') as HTMLButtonElement;
          const originalText = button.textContent;
          
          button.textContent = 'Suscribiendo...';
          button.disabled = true;
          
          setTimeout(() => {
            button.textContent = '¡Suscrito!';
            button.style.backgroundColor = '#22c55e';
            emailInput.value = '';
            
            setTimeout(() => {
              button.textContent = originalText;
              button.disabled = false;
              button.style.backgroundColor = '';
            }, 2000);
          }, 1000);
        }
      });
    }

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
      anchor.addEventListener('click', function (e) {
        e.preventDefault();
        const target = document.querySelector(this.getAttribute('href'));
        if (target) {
          target.scrollIntoView({
            behavior: 'smooth',
            block: 'start'
          });
        }
      });
    });

    // Add animation classes when elements come into view
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate-slide-up');
        }
      });
    }, observerOptions);

    // Observe sections for animations
    document.querySelectorAll('section').forEach(section => {
      observer.observe(section);
    });
  });
</script>

<style>
  .btn-primary {
    @apply bg-primary-500 hover:bg-primary-600 text-white font-medium py-2 px-4 rounded-md transition-colors duration-200;
  }
  
  .btn-outline {
    @apply border-2 border-current hover:bg-current hover:text-gray-900 font-medium py-2 px-4 rounded-md transition-all duration-200;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes slideUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out;
  }

  .animate-slide-up {
    animation: slideUp 0.6s ease-out;
  }

  /* Gradient text effect */
  .text-primary-400 {
    background: linear-gradient(135deg, #f20530, #ff6b8a);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>